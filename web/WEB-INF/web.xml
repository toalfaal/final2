<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="2.5">
    <servlet>
        <servlet-name>ali</servlet-name>
        <servlet-class>Server.Test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>Server.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Server.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgetPass</servlet-name>
        <servlet-class>Server.ForgetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attend</servlet-name>
        <servlet-class>Server.AttendingSystem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>attend</servlet-name>
        <url-pattern>/attend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forgetPass</servlet-name>
        <url-pattern>/forgetPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<servlet-mapping>
    <servlet-name>ali</servlet-name>
    <url-pattern>/ali</url-pattern>
</servlet-mapping>
    <servlet>
        <servlet-name>sendCode</servlet-name>
        <servlet-class>Server.SendCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendCode</servlet-name>
        <url-pattern>/sendCode</url-pattern>
    </servlet-mapping>

    //request Manager
    <servlet>
        <servlet-name>requestManager</servlet-name>
        <servlet-class>Server.RequestManager</servlet-class>
        <init-param>
            <param-name>adminUsername</param-name>
            <param-value>admin</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>requestManager</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>Server.Test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>



    </web-app>
